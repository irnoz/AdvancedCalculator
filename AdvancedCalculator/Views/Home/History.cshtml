@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-left-buttons">
    <a href="/" class="button">Back to Calculator</a>
</div>

<div class="container">
    <h2>Calculation History</h2>
    <div class="history-table-container">
        <table>
            <thead>
                <tr>
                    <th>Expression</th>
                    <th>Result</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody id="historyTableBody">
                <!-- History items will be appended here by JavaScript -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var history = localStorage.getItem('calcHistory') ? JSON.parse(localStorage.getItem('calcHistory')) : [];

            // Reverse the history array to show the latest calculations on top
            history.reverse();

            var historyTableBody = $('#historyTableBody');
            history.forEach(function(item) {
                var row = '<tr>' +
                    '<td>' + item.expression + '</td>' +
                    '<td>' + item.result + '</td>' +
                    '<td>' + item.timestamp + '</td>' +
                    '</tr>';
                historyTableBody.append(row);
            });
        });
    </script>
}
